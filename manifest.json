{
    "name": "Swift",
    "version": "1.0",
    "description": "A simple chrome extension for Twitch TV",
    "permissions": ["declarativeContent"],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "views/popup.html",
        "default_icon": {
            "16": "static/icons/icon16.png",
            "32": "static/icons/icon32.png",
            "48": "static/icons/icon48.png",
            "128": "static/icons/icon16.png"
        }
    },
    "icons": {
        "16": "static/icons/icon16.png",
        "32": "static/icons/icon32.png",
        "48": "static/icons/icon48.png",
        "128": "static/icons/icon16.png"
    },
    "manifest_version": 2
}